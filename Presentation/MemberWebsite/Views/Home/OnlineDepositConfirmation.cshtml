@model AFT.RegoV2.MemberWebsite.Models.RegisterStep4Model
@{
    ViewBag.Title = "My account - Rego";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var section = "onlinedeposit";
}

<section class="main-content section account">
    <div class="container">
        <h2 class="title-page"><span>Cashier</span></h2>
        <div class="row row-eq-height">
            @Html.Partial("_PartialCashierMenu", section)
            <div class="col-sm-9 white-content withdrawal" id="withdrawal-wrapper">
                <h2 data-i18="balanceInformation.onlineDeposit">online deposit</h2>

                <p class="alert-msg validation" data-i18n="cashier.depositCongratulation">Congratulation on your deposit!</p>
                
                <h5 class="section"><span data-i18n="">summary confirmation</span></h5>
                <table class="tableinfo">
                    <tr>
                        <td><b data-i18n="balanceInformation.onlineDeposit"></b></td>
                        <td><span class="js-balance-currency-code"></span> @Model.DepositAmountFormatted</td>
                    </tr>
                    @if (@Model.BonusAmount.HasValue)
                    {
                        <tr>
                            <td><b data-i18n="balanceInformation.bonusAmount"></b></td>
                            <td><span class="js-balance-currency-code"></span> @Model.BonusAmountFormatted</td>
                        </tr>
                        if (!string.IsNullOrEmpty(@Model.BonusCode))
                        {
                            <tr>
                                <td><b data-i18n="balanceInformation.bonusCode"></b></td>
                                <td>@Model.BonusCode</td>
                            </tr>
                        }
                    }
                    <tr>
                        <td><b data-i18n="balanceInformation.total">Total</b></td>
                        <td><span class="js-balance-currency-code"></span> @Model.TotalAmountFormatted</td>
                    </tr>
                </table>
                @Html.Partial("_PartialQuickLink")
            </div>
        </div>
    </div>
</section>

@section scripts {
}