@{
    ViewBag.Title = "My account - Rego";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string section = "offlinedeposit";
}
@model AFT.RegoV2.MemberWebsite.Models.DepositConfirmationModel

<section class="main-content section account">

    <div class="container">

        <h2 class="title-page"><span>Cashier</span></h2>

        <div class="row row-eq-height">

            @Html.Partial("_PartialCashierMenu", section)

            <div class="col-sm-9 white-content offlinedeposit" id="withdrawal-wrapper">

                <h2 data-i18="balanceInformation.offlineDeposit">deposit offline</h2>

                <p class="alert-msg validation" data-i18n="cashier.depositCongratulation">Congratulation on your deposit!</p>
                <h5 class="section"><span data-i18n="">summary confirmation</span></h5>

                <table class="tableinfo">
                    <tr>
                        <td><b data-i18n="balanceInformation.offlineDeposit"></b></td>
                        <td>@Model.CurrencyCode @Model.DepositAmountFormatted</td>
                    </tr>
                    <tr>
                        <td><b data-i18n="balanceInformation.bonusAmount"></b></td>
                        <td>@Model.CurrencyCode @Model.BonusAmountFormatted</td>
                    </tr>
                    <tr>
                        @if (!string.IsNullOrEmpty(@Model.Bonus))
                        {
                            <td><b data-i18n="balanceInformation.bonusCode"></b></td>
                            <td>@Model.Bonus</td>
                        }

                    </tr>
                    <tr>
                        <td><b data-i18n="balanceInformation.total">Total</b></td>
                        <td>@Model.CurrencyCode @Model.TotalFormatted</td>
                    </tr>
                </table>

                <div class="grey">
                    <ul>
                        <li>Details have been sent to your personal email.</li>
                        <li>Go to <a class="green" href="@Url.Action("DepositHistory")">Deposit History</a> to confirm the transaction & submit the required info.</li>
                        <li>For faster processing, please use the bank account with the registered username and these recommended banks: Bank A, Bank B, Bank C</li>
                        <li>Bonus will be applied after validation process.</li>
                    </ul>
                </div>

                @Html.Partial("_PartialQuickLinkConfirmation")

            </div>
        </div>
    </div>

</section>

@section scripts {
}