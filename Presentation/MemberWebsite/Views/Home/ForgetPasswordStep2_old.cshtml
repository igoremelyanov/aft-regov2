@using AFT.RegoV2.MemberApi.Interface.Player
@model RegistrationFormDataResponse
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="main-content">
    <div class="container">
        <div class="page-header">
            <h2 class="title-page"><span data-i18n="registration.resetPassword"></span></h2>
        </div>
        <div id="security-answer-wrapper" class="page-wrapper">
            <form id="security-answer-form" autocomplete="off" role="form" action="/api/SecurityAnswerRequest" method="POST">
                <div class="forget-reset-password-form">
                    <div class="form-group">
                        <label data-i18n="common.securityQuestion"></label>
                        <b data-bind="text: question"></b>
                        <input class="form-control hide disabled" type="text" name="answer" data-bind="value: answer"/>
                        <input style="display: none" class="form-control" name="playerId" value="@ViewBag.PlayerId" />

                        <select class="disabled form-control">
                            <option value="" data-i18n="common.pleaseSelectOptionAsHint"></option>
                        </select>
                    </div>
                    <div class="form-group" data-bind="css: {'has-error': !answer.isValid()}, validationOptions: {insertMessages: false}">
                        <label data-i18n="registration.answerYourSecurityQuestion"></label>
                        <input type="text" class="form-control" name="answer" data-bind="value: answer" />
                        <p class="text-danger" data-bind="text: answer.error, visible: !answer.isValid(), style: { color: !answer.isValid() ? 'red' : 'black' }"></p>
                    </div>
                    <div class="float-right">
                        <button type="submit" class="btn btn-block" data-bind="click: submitSecurityAnswerCheck">next</button>
                    </div>
                </div>
            </form>
        </div>
        <input style="display: none" name="token" value="@ViewBag.Token"/>
    </div>
</div>

@section scripts
{
    <script src="/Scripts/custom/login.js"></script>
    <script src="/Scripts/custom/formbase.js"></script>
    <script src="/Scripts/custom/forgetPasswordStep2.js"></script>
}