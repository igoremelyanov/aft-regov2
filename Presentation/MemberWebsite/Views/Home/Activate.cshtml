@{
    ViewBag.Title = "Activation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Activated)
{
    <h2 style="padding-left: 30px;" data-i18n="login.activationCompleted"></h2>

    <a href="@Url.Action("Login")" style="padding-left: 30px; font-size: 20px;" data-i18n="login.proceedToLogin"></a>
}
else
{
    <p data-i18n="login.invalidActivationToken"></p>
}
