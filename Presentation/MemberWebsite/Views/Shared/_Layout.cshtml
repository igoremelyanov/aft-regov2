                <div class="modal-dialog modal-warning text-center">
                    <div class="modal-content">
                        <div class="modal-body">
                            <button type="button" data-dismiss="modal" aria-hidden="true" class="close"><i class="fa fa-fw fa-times-circle"></i></button>
                            <h5 class="modal-title">Error</h5>
                            <ul data-bind="foreach: messages" class="modal-list">
                                <li data-bind="text: $data"></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>*@
        <div class="modal fade" id="alert-modal">
            <div class="modal-dialog modal-warning text-center">
                <div class="modal-content">
                    <div class="modal-body">
                        <button data-dismiss="modal" aria-label="Close" class="close">
                            <img src="/Content/images/close-popup.png" />
                        </button>
                        <p class="align-center logo"><img src="@Url.Content("~/Content/images/logo-popup.png")" /></p>
                        <div class="row">
                            <div class="col-sm-offset-3 col-sm-6 no-padding">
                                <p class="title"></p>
                                <div class="clearfix">
                                    <p class="message"></p>
                                </div>
                                <p class="align-center marginTop40">
                                    <a href="#"><img src="@Url.Content("~/Content/images/icon-customerservice.png")" /></a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="game-modal">
            <div class="modal-dialog modal-warning text-center">
                <div class="modal-content">
                    <div class="modal-body">
                        <button data-dismiss="modal" aria-label="Close" class="close">
                            <img src="/Content/images/close-popup.png"/>
                        </button>
                        <iframe src=""></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

